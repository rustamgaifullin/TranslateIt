<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rm.translateit.ui.activities.MainActivity" android:background="@android:color/darker_gray">

  <View
      android:layout_height="176dp"
      android:id="@+id/view"
      android:layout_width="0dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintRight_toRightOf="parent" android:background="@android:color/white"
      app:layout_constraintHorizontal_bias="0.0"/>
  <EditText
      android:layout_width="0dp"
      android:layout_height="40dp"
      android:ems="10"
      android:id="@+id/word_editText"
      android:inputType="text" android:layout_below="@+id/to_spinner" android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      app:layout_constraintRight_toRightOf="@+id/view"
      app:layout_constraintLeft_toLeftOf="@+id/view" android:layout_marginTop="16dp"
      app:layout_constraintTop_toBottomOf="@+id/from_spinner" android:layout_marginStart="16dp"
      android:layout_marginLeft="16dp" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"/>
  <Button
      android:text="@string/translate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:layout_below="@+id/word_editText" android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true" android:id="@+id/translate_button"
      app:layout_constraintRight_toRightOf="@+id/view"
      android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:layout_marginTop="16dp"
      app:layout_constraintTop_toBottomOf="@+id/word_editText" app:layout_constraintBottom_toBottomOf="@+id/view"
      android:layout_marginBottom="16dp"/>
  <Spinner
      android:layout_width="0dp"
      android:layout_height="24dp" android:layout_alignParentTop="true"
      android:id="@+id/from_spinner"
      app:layout_constraintLeft_toLeftOf="@+id/view"
      app:layout_constraintRight_toLeftOf="@+id/to_spinner" android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp" app:layout_constraintTop_toTopOf="@+id/view"
      app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="16dp" android:layout_marginLeft="16dp"
      android:layout_marginTop="16dp"/>
  <Spinner
      android:layout_width="0dp"
      android:layout_height="24dp"
      android:id="@+id/to_spinner"
      android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      app:layout_constraintRight_toRightOf="@+id/view"
      app:layout_constraintLeft_toLeftOf="@+id/guideline7" app:layout_constraintTop_toTopOf="@+id/view"
      android:layout_marginTop="16dp" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
      app:layout_constraintHorizontal_bias="1.0" android:layout_marginStart="8dp" android:layout_marginLeft="8dp"/>
  <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="511dp"
      android:id="@+id/guideline7" android:orientation="vertical"
      tools:layout_editor_absoluteX="176dp" tools:layout_editor_absoluteY="0dp"
      app:layout_constraintGuide_Percent="49"/>
  <View
      android:background="@android:color/white"
      android:layout_height="0dp"
      android:id="@+id/result_view"
      android:layout_width="0dp"
      app:layout_constraintTop_toBottomOf="@+id/view"
      app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
      app:layout_constraintLeft_toLeftOf="parent" android:layout_marginLeft="8dp"
      app:layout_constraintRight_toRightOf="parent" android:layout_marginRight="8dp"
      android:layout_marginStart="8dp" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"/>

  <TextView
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:id="@+id/result_textView"
      android:textColor="@android:color/black"
      app:layout_constraintLeft_toLeftOf="@+id/result_view" android:layout_marginLeft="8dp"
      app:layout_constraintRight_toRightOf="@+id/result_view" android:layout_marginRight="8dp"
      app:layout_constraintTop_toTopOf="@+id/result_view" android:layout_marginTop="8dp"
      app:layout_constraintBottom_toBottomOf="@+id/result_view" android:layout_marginBottom="8dp"
      android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:textSize="16sp"/>
</android.support.constraint.ConstraintLayout>
